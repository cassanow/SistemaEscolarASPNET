@model List<Professor>

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Telefone</th>
        <th scope="col">Disciplina</th>
        <th scope="col">Editar</th>
        <th scope="col">Remover</th>
    </tr>
    </thead>
    @foreach (var professor in Model)
    {
        <tr>
            <td>@professor.Id</td>
            <td>@professor.Nome</td>
            <td>@professor.Email</td>
            <td>@professor.Telefone</td>
            <td>@professor.Disciplina</td>
            <td>
                <form asp-action="Atualizar" asp-route-id="@professor.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-warning">Editar</button>
                </form>
            </td>
            <td>
                <form asp-action="Remover" asp-route-id="@professor.Id" method="post" onsubmit="return confirm('Certeza que deseja excluir @professor.Nome?')" class="d-inline">
                    <input type="hidden" name="id" value="@professor.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a href="@Url.Action("Adicionar", "Professor")" class="btn btn-primary">Cadastrar Professor</a>
</div>